<Window x:Class="MovieMaker.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="240" Width="560" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Text="出力先" Margin="0,0,8,8" VerticalAlignment="Center"/>
    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,8,8"
             Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"/>
    <Button Grid.Row="0" Grid.Column="2" Content="参照" Width="60" Margin="0,0,0,8"
            Click="BrowseOutput_OnClick"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="アーカイブ" Margin="0,0,8,8" VerticalAlignment="Center"/>
    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"
             Text="{Binding ArchiveDirectory, UpdateSourceTrigger=PropertyChanged}"/>
    <Button Grid.Row="1" Grid.Column="2" Content="参照" Width="60" Margin="0,0,0,8"
            Click="BrowseArchive_OnClick"/>

    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Content="キャンセル" Width="80" Margin="0,0,8,0" Click="Cancel_OnClick"/>
      <Button Content="保存" Width="80" Click="Save_OnClick"/>
    </StackPanel>
  </Grid>
</Window>
